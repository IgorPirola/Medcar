<%- include('partials/header.ejs') %>

<div class="w-full flex justify-center">
    <table class="table-auto w-9/12 my-8 bg-white shadow-md rounded-lg">
        <thead class="bg-gray-400">
            <tr>
                <th class="px-4 py-2 font-medium">Email</th>
                <th class="px-4 py-2 font-medium">Nome</th>
                <th class="px-4 py-2 font-medium">CPF</th>
                <th class="px-4 py-2 font-medium">Celular</th>
                <th class="px-4 py-2 font-medium">Ação</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr class="text-center even:bg-gray-100 odd:bg-white">
                    <td class="px-4 py-2 border border-gray-400"><%= user.email %></td>
                    <td class="px-4 py-2 border border-gray-400"><%= user.nome %></td>
                    <td class="px-4 py-2 border border-gray-400"><%= user.cpf ?? "Não informado" %></td>
                    <td class="px-4 py-2 border border-gray-400"><%= user.celular ?? "Não informado" %></td>
                    <td class="px-4 py-2 border border-gray-400">
                        <a href="/deleteUser/<%= user.email %>" class="text-red-500 hover:text-red-700">Deletar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/gerenciamento/confirmarAdmin">Criar permissões</a>
</div>

<%- include('partials/footer.ejs') %>
