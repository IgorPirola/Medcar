<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medcar</title>

    <link rel="stylesheet" href="/css/homeheader.css">
    <link rel="stylesheet" href="/css/cadastroServico.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.2/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <header class="cabecalho">
        <div class="menuprincipal">
            <div>
                <a href="/"><img src="/img/logo.png" alt="Logo" class="block w-24 h-auto mx-24"></a>
            </div>
            <div class="menu">
                <nav>
                    <a href="/" class="linkMenu">Home</a>
                    <a href="#sobre" class="linkMenu">Sobre</a>
                    <a href="#servicos" class="linkMenu">Serviços</a>
                    <a href="#rodape" class="linkMenu">Contato</a>
                    <a href="/gerenciamento" class="linkMenu">Gerenciamento</a>
                </nav>
                <div class="flex flex-row w-1/3 gap-8">
                    <a href="/login" class="btnMenu" >Entrar</a>
                    <a href="/register" class="btnMenu">Cadastrar</a>
                </div>
            </div>
        </div>
    </header>

    <script>
        window.onscroll = function() {
            var header = document.querySelector('.cabecalho');
        
            if (window.pageYOffset > 0) { // Verifica se a página foi rolada
                header.classList.add('scrolled'); // Adiciona a classe 'scrolled'
            } else {
                header.classList.remove('scrolled'); // Remove a classe 'scrolled' se estiver no topo
            }
        }
    
        // Aguarda o DOM ser completamente carregado
        document.addEventListener('DOMContentLoaded', function() {
            // Seleciona todos os contêineres de ícones de serviço
            const iconContainers = document.querySelectorAll('.iconeServico');
    
            // Adiciona eventos de mouseover e mouseout em cada contêiner
            iconContainers.forEach(container => {
                const img = container.querySelector('.img_box');
                const saibaMais = container.querySelector('.saiba-mais');
    
                // Quando o mouse estiver sobre o contêiner
                container.addEventListener('mouseover', () => {
                    img.style.opacity = '0.3'; // Reduz a opacidade da imagem
                    saibaMais.style.opacity = '1'; // Exibe o texto "Saiba mais"
                });
    
                // Quando o mouse sair do contêiner
                container.addEventListener('mouseout', () => {
                    img.style.opacity = '1'; // Restaura a opacidade da imagem
                    saibaMais.style.opacity = '0'; // Oculta o texto "Saiba mais"
                });
            });
        });
    </script>